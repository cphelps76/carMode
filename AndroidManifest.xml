<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rlib.forcecarmode"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="14" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:debuggable="true" android:permission="android.permission.NFC" >

        <receiver android:name=".CarModeWidget" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    		    <meta-data android:name="android.appwidget.provider" android:resource="@xml/carmodetoggle_widget_info" />
		    <intent-filter>
            	<action android:name="android.nfc.action.TECH_DISCOVERED" />
       		</intent-filter>
       		<meta-data android:name="android.nfc.action.TECH_DISCOVERED" android:resource="@xml/filter_nfc"/>
       

        </receiver>

        <service android:name=".CarModeWidget$UpdateService" />
    </application>
    
    <uses-feature android:name="android.hardware.nfc" android:required="true" />	

</manifest>